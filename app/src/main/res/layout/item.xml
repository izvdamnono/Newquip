<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <variable
            name="nota"
            type="com.izv.dam.newquip.pojo.Nota" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/id_card_view_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="80dp"
        app:cardBackgroundColor="@color/colorNota0">

        <!--app:cardBackgroundColor="@color/colorNota1"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical"
                card_view:ignore="UselessParent">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@{nota.imagen}"
                    card_view:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/tvTituloNota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="@{nota.titulo}"
                    android:textAlignment="textEnd"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title" />

                <TextView
                    android:id="@+id/tvTexoNota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="@{nota.nota}"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight=".5"
                    android:text="@{nota.fecha_creacion}"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/tvFechaRecordatorio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight=".5"
                    android:text="@{nota.fecha_recordatorio}"
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>
